            </staticText>
            <staticText>
                <reportElement x="185" y="0" width="60" height="20"/>
                <text><![CDATA[Age]]></text>
            </staticText>
            <staticText>
                <reportElement x="370" y="0" width="60" height="20"/>
                <text><![CDATA[City]]></text>
            </staticText>
        </band>
    </columnHeader>
    <detail>
        <band height="20">
            <textField>
                <reportElement x="0" y="0" width="60" height="20"/>
                <textElement splitType="ImmediateLineBreak"/>
                <textFieldExpression><![CDATA[$F{name}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="185" y="0" width="60" height="20"/>
                <textElement splitType="ImmediateLineBreak"/>
                <textFieldExpression><![CDATA[$F{age}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="370" y="0" width="60" height="20"/>
